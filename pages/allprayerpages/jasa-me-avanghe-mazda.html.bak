            }
            
            .prayer-subtitle {
                font-size: 1rem;
            }
            
            .prayer-name {
                font-size: 1.3rem;
            }
            
            .prayer-text,
            .prayer-translation {
                padding: 0 0.8rem;
            }
            
            .prayer-note-container {
                margin-left: 0.4rem;
                margin-right: 0.4rem;
            }
